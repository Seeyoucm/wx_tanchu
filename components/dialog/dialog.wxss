/* components/test-com/test.wxss */
.wx_mask{
  /* 让mask充满整个屏幕 */
  position: fixed;
  z-index: 1000;
  top:0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #F5F5F5;
}
.wx_test{
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  /*translate(-50%,-50%)实现居中 */
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  background-color: #FAFAFA;
  text-align: center;
  border-radius: 3rpx;
  overflow: hidden;
}
.wx_test_title{
  font-size: 18rpx;
  padding: 15px 15px 5px;
}
.wx_test_content{
  padding:15px 15px 5px;
  min-height: 40rpx;
  font-size:16rpx;
  line-height: 1.3;
  word-wrap: break-word;
  word-break:break-all;
  color: #999;
}
.wx_test_footer{
  display: flex;
  align-items: center;
  position: relative;
  line-height: 45px;
  font-size: 17px;
}
.wx_test_footer::before{
  content:"";
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  height: 1px;
  border-top: 1px solid #D5D5;
  color: #D5D5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.wx_test_btn{
  display: block;
  -webkit-flex:1;
  flex: 1;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  position: relative;
}
.wx_test_footer .wx_test_btn:nth-of-type(1){
  color:#ffcdd2;
}
.wx_test_footer .wx_test_btn:nth-of-type(2){
  color:#3cc51f;
}
.wx_test_footer .wx_test_btn:nth-of-type(2)::after{
  content:"";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #d5d5d6;
  color:#d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);

}

